<div class="depot_form">
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>
<%= form_tag login_url do %>
<fieldset>
<legend>Please Log In</legend>
<div>
<%= label_tag :name, 'Name:' %>
<%= text_field_tag :name, params[:name] %>
</div>
<div>
<%= label_tag :password, 'Password:' %>
<%= password_field_tag :password, params[:password] %>
</div>
<div>
<%= submit_tag "Login" %>

</div>
</fieldset>
<% end %>
<%= link_to 'Sign Up', '/users/new' %>
</div>

<form  <%= form_tag login_url do %>>
            
            
            <div class="form-group">
              <input type="text" placeholder="Name" class="form-control" <%= text_field_tag :name, params[:name] %>>
            </div>
            <div class="form-group">
              <input type="password" placeholder="Password" class="form-control" <%= password_field_tag :password, params[:password] %>>
            </div>
            
            <%= submit_tag "Login", class: "btn btn-success"%>
            
          </form>
          <% end %>