
<% if flash[:alert] %>
<p id="notice"><%= flash[:alert] %></p>
<% end %>

<div class="col-xs-5">
<form <%= form_tag login_url do %>
            
            
            <div class="form-group">
            <label for="inputEmail">Name
              <input type="text" placeholder="Name" class="form-control" <%= text_field_tag :name, params[:name] %>
            </label>
            </div>
            <div class="form-group">
                <label for="inputEmail">Password</label>
              <input type="password" placeholder="Password" class="form-control" <%= password_field_tag :password, params[:password] %>
            </label>
            </div>
            
            <%= submit_tag "Login", class: "btn btn-success"%>
            <% end %>
          
          </form><br>
          <%= link_to 'Sign Up', '/users/new', class: "btn btn-success", :style=>'color:#FFFFFF;' %>
          </div>