<p id="notice"><%= notice %></p>

<h1>Listing User Details</h1>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_details.each do |user_detail| %>
      <tr>
        <td><%= user_detail.user.name %></td>
        <td><%= user_detail.address %></td>
        <td><%= user_detail.email %></td>
        <td><%= user_detail.phone %></td>
        <td><%= link_to 'Show', user_detail %></td>
        <td><%= link_to 'Edit', edit_user_detail_path(user_detail) %></td>
        <td><%= link_to 'Destroy', user_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

